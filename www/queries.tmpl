<h3>Last {{completed_log_size}} Completed Queries</h3>

<table class='table table-hover table-border'>
  <tr>
    <th>User</th>
    <th>Default Db</th>
    <th>Statement</th>
    <th>Query Type</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Duration</th>
    <th>Scan Progress</th>
    <th>Bytes Read</th>
    <th>Total Bytes Sent</th>
    <th>Peak Per Host Mem Consumption</th>
    <th>State</th>
    <th># rows fetched</th>
    <th>Resource Pool</th>
    <th>Details</th>
  </tr>
{{#completed_queries}}
