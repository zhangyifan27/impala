    <th>Query Type</th>
    <th>Start Time</th>
    <th>Waiting Time</th>
    <th>Duration</th>
    <th>Scan Progress</th>
    <th>Bytes Read</th>
    <th>Total Bytes Sent</th>
    <th>Peak Per Host Mem Consumption</th>
    <th>State</th>
    <th>Last Event</th>
    <th># rows fetched</th>
    <th>Resource Pool</th>
    <th>Details</th>
    <th>Action</th>
  </tr>
{{! filter to get just waiting queries from in_flight_queries}}
{{#in_flight_queries}}
{{?waiting}}
  <tr>
    <td>{{effective_user}}</td>
    <td>{{default_db}}</td>
    <td><samp>{{stmt}}</samp></td>
    <td><samp>{{stmt_type}}</samp></td>
    <td>{{start_time}}</td>
    <td>{{waiting_time}}</td>
    <td>{{duration}}</td>
    <td>{{progress}}</td>
    <td>{{bytes_read}}</td>
    <td>{{total_bytes_sent}}</td>
    <td>{{peak_per_host_mem_consumption}}</td>
    <td><samp>{{state}}</samp></td>
    <td><samp>{{last_event}}</samp></td>
    <td>{{rows_fetched}}</td>
    <td>{{resource_pool}}</td>
